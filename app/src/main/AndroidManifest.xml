<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.cs.cbli_reflex" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameShowBuzzerActivity"
            android:label="Game Show Buzzer"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.ualberta.cs.cbli_reflex.MainActivity" />
        </activity>
        <activity
            android:name=".ReactionTimerActivity"
            android:label="Reaction Timer" >
        </activity>
        <activity
            android:name=".StatisticsActivity"
            android:label="Statistics" >
        </activity>
    </application>

</manifest>
